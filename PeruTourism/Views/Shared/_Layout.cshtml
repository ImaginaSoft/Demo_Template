@using PeruTourism.Utility
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>PeruTourism</title>
    <!-- ingresar descripcion del sitio -->
    <meta name="description" content="Peru Tourism: Your customized travel website. Go beyond ordinary travel!">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#0f703a">
    <meta name="msapplication-navbutton-color" content="#0f703a">
    <meta name="apple-mobile-web-app-status-bar-style" content="#0f703a">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Handlee|Montserrat:400,600,700,800">
    @*@Styles.Render("~/Content/css")*@

    <link rel="stylesheet" href="~/Content/css/layout.min.css" media="all">
    <link rel="stylesheet" href="~/Content/css/home.min.css" media="all">
    <link rel="stylesheet" href="~/Content/css/propuestas.min.css" media="all">
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>


<body>

    @if (Session["Idioma"].Equals(ConstantesWeb.CHR_IDIOMA_INGLES))
    {

        <header id="header">
            <div class="container-fluid">
                <div class="row">
                    <!-- navegacion -->
                    <nav class="navbar navbar-default">
                        <div class="container">
                            <div class="row">
                                <div class="navbar-header">
                                    <!-- brand -->
                                    <div class="brand"><img src="~/Content/images/perutourism-logo.png" title="Peru Tourism" alt="Peru Tourism"></div>
                                    <div class="slogan">
                                        Your customized travel website
                                    </div>
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#siteNav"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                                </div>
                            </div>
                        </div>
                        <div class="collapse navbar-collapse" id="siteNav">
                            <div class="container">
                                <div class="row">
                                    <ul class="nav navbar-nav">
                                        <li class="active"><a href="@Url.Action("Login", "Home",new { id = Session["IdCliente"] })">Welcome</a></li>
                                        <li><a href="@Url.Action("VerPropuesta", "Home",new { pCodCliente = Session["CodCliente"] })">Proposals</a></li>
                                        <li><a href="javascript:void(0)">Information</a></li>
                                        <li><a href="javascript:void(0)">Testimonials</a></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- navegacion -->
        </header>

    }
    else
    {


        <header id="header">
            <div class="container-fluid">
                <div class="row">
                    <!-- navegacion -->
                    <nav class="navbar navbar-default">
                        <div class="container">
                            <div class="row">
                                <div class="navbar-header">
                                    <!-- brand -->
                                    <div class="brand"><img src="~/Content/images/perutourism-logo.png" title="Peru Tourism" alt="Peru Tourism"></div>
                                    <div class="slogan">Tu sitio web personalizado de viajes</div>
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#siteNav"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                                </div>
                            </div>
                        </div>
                        <div class="collapse navbar-collapse" id="siteNav">
                            <div class="container">
                                <div class="row">
                                    <ul class="nav navbar-nav">
                                        <li class="active"><a href="@Url.Action("Login", "Home",new { id = Session["IdCliente"] })">Bienvenida</a></li>
                                        <li><a href="@Url.Action("VerPropuesta", "Home",new { pCodCliente = Session["CodCliente"] })">Propuestas</a></li>
                                        <li><a href="javascript:void(0)">Información</a></li>
                                        <li><a href="javascript:void(0)">Testimonios</a></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- navegacion -->
        </header>

    }



    <div class="content">

        @RenderBody()

    </div>

