                                        <td>@d.ApePasajero</td>
                                        @*<td>@d.FchNacimiento</td>
                        <td>@d.Pasaporte</td>
                        <td></td>
                        <td></td>*@
                                    </tr>
                                }
                                @*@{decimal totalSaldo = totalCargo - totalAbono; }*@

                            </tbody>

                        </table>


                        <div class="prop-title">TRANSPORT TICKET</div>
                        <table class="table table-bordered table-responsive table-hover table-pt">
                            <thead>
                                <tr>
                                    @*<th>PASSENGERS </th>*@
                                    <th>Date Flight</th>
                                    <th>Route</th>
                                    @*<th>Flight</th>
                    <th>Airline</th>
                    <th>Flight No.</th>
                    <th>Departure</th>
                    <th>Reservation No</th>
                    <th>Tickets</th>*@
                                    <th>Status</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in lstReservaTerrestreGG)
                                {


                                    //totalAbono = totalAbono + d.Abono;
                                    //totalCargo = totalCargo + d.Cargo;

                                    <tr>
                                        @*<td>@d.</td>*@
                                        <td>@d.FchVuelo</td>
                                        <td>@d.RutaVuelo</td>
                                        @*<td>@d.RutaVuelo</td>
                        <td>@d.AereoLinea</td>
                        <td>@d.CodReserva</td>
                        <td>@d.HoraSalida</td>
                        <td>@d.HoraLlegada</td>*@
                                        <td>@d.CodStsReserva</td>
                                    </tr>
                                }
                                @*@{decimal totalSaldo = totalCargo - totalAbono; }*@

                            </tbody>

                        </table>


                        <div class="prop-title">AIR TICKET</div>
                        <table class="table table-bordered table-responsive table-hover table-pt">
                            <thead>
                                <tr>
                                    @*<th>PASSENGERS </th>*@
                                    <th>Date Flight</th>
                                    <th>Route</th>
                                    @*<th>Flight</th>
                    <th>Airline</th>
                    <th>Flight No.</th>
                    <th>Departure</th>
                    <th>Reservation No</th>
                    <th>Tickets</th>*@
                                    <th>Status</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in lstReservaAereoGG)
                                {


                                    //totalAbono = totalAbono + d.Abono;
                                    //totalCargo = totalCargo + d.Cargo;

                                    <tr>
                                        @*<td>@d.</td>*@
                                        <td>@d.FchVuelo</td>
                                        <td>@d.RutaVuelo</td>
                                        @*<td>@d.RutaVuelo</td>
                        <td>@d.AereoLinea</td>
                        <td>@d.CodReserva</td>
                        <td>@d.HoraSalida</td>
                        <td>@d.HoraLlegada</td>*@
                                        <td>@d.CodStsReserva</td>
                                    </tr>
                                }
                                @*@{decimal totalSaldo = totalCargo - totalAbono; }*@

                            </tbody>

                        </table>

                        <div class="prop-title">HOTEL</div>
                        <table class="table table-bordered table-responsive table-hover table-pt">
                            <thead>
                                <tr>
                                    @*<th>PASSENGERS </th>*@
                                    <th>Country</th>
                                    <th>Hotel</th>
                                    <th>Phone</th>
                                    <th>Status</th>
